테이블이름
department	//부서
employee	//사원정보
commute		//근태관리(미진행)
iboard		//통합게시판구분
board		//사내게시판
bcomment	//게시판 댓글
bstatement	//업무명세서(미진행)
bbreakdown	//업무내역(미진행)
approval	//결재(미진행)
fund		//자금관리
hardware	//HW관리(미진행)
software	//SW관리(미진행)
salary		//급여관리
group		//조직도(미진행)

ex)
#테이블명
create table 테이블명
(
    dept_code varchar2(20) not null, 
	dept_name varchar2(20) ,
	dept_higher varchar2(100),
	dept_leader varchar2(100),
	dept_phone varchar2(100),
	constraint pk_dept primary key(dept_code)
);
create sequence 시퀀스명 nocache

#department
create table department
(
    dept_code varchar2(20) not null, 
	dept_name varchar2(20) ,
	dept_higher varchar2(100),
	dept_leader varchar2(100),
	dept_phone varchar2(100),
	constraint pk_dept primary key(dept_code)
);
constraint fk_dept foreign key(dept_higher)
references department(dept_code)
create sequence dept_code_seq nocache

#employee
create table employee
(
	emp_code varchar2(20) not null,
	dept_code varchar2(20) not null,
	po_code varchar2(20) not null,
	emp_passwd varchar2(20),
	emp_name varchar2(50),
	emp_jumin varchar2(20),
	emp_birth varchar2(100),
	emp_phone varchar2(100),
	emp_email varchar2(100),
	emp_acability varchar2(100),
	emp_career number,
	emp_join varchar2(100),
	emp_bank varchar2(100),
	emp_acnum number,
	constraint pk_emp primary key(emp_code),
	constraint fk_emp foreign key(dept_code)
	references department(dept_code)
);
ALTER TABLE employee ADD CONSTRAINT fk_emp2 FOREIGN KEY(po_code) 
  REFERENCES position(po_code);
create sequence emp_code_seq nocache

#position
create table position
(
    po_code varchar2(20) not null, 
	po_name varchar2(20),
	constraint pk_po primary key(po_code)
);
create sequence po_code_seq nocache

#fund
create table fund(
fund_code number,
fund_division varchar2(100),	
fund_days varchar2(100),	
fund_day varchar2(100), 
fund_item varchar2(100),	
fund_briefs varchar2(100),	
fund_account varchar2(100),	
fund_deposit varchar2(100),	
fund_withdraw varchar2(100),	
fund_balance varchar2(100)	
);
create sequence fund_code_seq nocache

#salary
create table salary(
salary_code varchar2(20),
emp_code varchar2(20),
dept_code varchar2(20),
po_code varchar2(20),
salary_normal varchar2(100),
salary_bonus varchar2(100),
salary_pay varchar2(100),
salary_pension varchar2(100),
salary_health varchar2(100),
salary_nursing varchar2(100),
salary_employ varchar2(100),
salary_income varchar2(100),
salary_resident varchar2(100),
salary_deduction varchar2(100),
salary_acpay varchar2(100)
);
create sequence salary_code_seq nocache;













